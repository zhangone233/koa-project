{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitThis": false,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@config/*": [
        "config/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "typings/types"
    ]
  },
  "include": [
    "app/**/*.ts",
    "koa/**/*.ts",
    "test/**/*.ts",
    "config/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "files": [
    "app.ts",
    "bootstrap.ts",
  ],
  "ts-node": {
    "files": true
  },
  "exclude": [
    "node_modules"
  ]
}